// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "tab_size": 4,
  "hard_tabs": false,
  "format_on_save": "off",
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "gemini-2.5-pro"
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "grok-code-fast-1"
    },
    "model_parameters": []
  },
  "wsl_connections": [
    {
      "distro_name": "Ubuntu-22.04",
      "user": null,
      "projects": [
        {
          "paths": ["/home/hacker"]
        },
        {
          "paths": ["/home/hacker/dev/api-pmc"]
        },
        {
          "paths": ["/home/hacker/dev/vitae-homecare2.0"]
        }
      ]
    }
  ],
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "file_types": {},
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Macchiato"
  },
  "terminal": {
    "font_size": 12.0
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "base_keymap": "VSCode",
  "search": {
    "include_ignored": false
  },
  "gutter": {
    "line_numbers": true
  },
  "minimap": {
    "show": "auto"
  },
  "vim_mode": true,
  "relative_line_numbers": false,
  "ui_font_size": 14,
  "buffer_font_size": 14,

  // Configuración específica de Vim en Zed
  "vim": {
    "use_system_clipboard": "always"
  },
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Kanagawa Wave"
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": {
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": false
        }
      }
    }
  },
  "debugger": {
    "log_dap_communications": true
  }
}
